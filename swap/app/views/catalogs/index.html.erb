<h1>Listing catalogs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Description</th>
    <th>Sort</th>
    <th>Parent</th>
  </tr>

<% for catalog in @catalogs %>
  <tr>
    <td><%=h catalog.name %></td>
    <td><%=h catalog.image %></td>
    <td><%=h catalog.description %></td>
    <td><%=h catalog.sort %></td>
    <td><%=h catalog.parent_id %></td>
    <td><%= link_to 'Show', catalog %></td>
    <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
    <td><%= link_to 'Destroy', catalog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

