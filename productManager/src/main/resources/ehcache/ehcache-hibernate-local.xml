<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir/hibernate/productManager" />
	<!--
		DefaultCache setting.
		Modify ehcache-safe.xml for timeToIdleSeconds,timeToLiveSecond,diskExpiryThreadIntervalSeconds.
		Use ehcache-safe.xml default for maxElementsInMemory,maxElementsOnDisk,overflowToDisk,eternal.
		Use ehcache default for memoryStoreEvictionPolicy,diskPersistent.
	-->
	<defaultCache maxElementsInMemory="10000" overflowToDisk="true" eternal="false"
		memoryStoreEvictionPolicy="LRU" maxElementsOnDisk="10000000" diskExpiryThreadIntervalSeconds="600"
		timeToIdleSeconds="3600" timeToLiveSeconds="100000" diskPersistent="false" />


	<!-- Special objects setting. -->
	<cache name="com.poprlz.entity.user.User" maxElementsInMemory="500" overflowToDisk="true"
		eternal="true">
	</cache>
	<cache name="com.poprlz.entity.user.User.roles" maxElementsInMemory="500" overflowToDisk="true"
		eternal="true">
	</cache>
	<cache name="com.poprlz.entity.user.Role" maxElementsInMemory="500" overflowToDisk="true"
		eternal="true">
	</cache>
	<cache name="com.poprlz.entity.user.Role.auths" maxElementsInMemory="500" overflowToDisk="true"
		eternal="true">
	</cache>
	<cache name="com.poprlz.entity.user.Authority" maxElementsInMemory="500" overflowToDisk="true"
		eternal="true" />
</ehcache>
